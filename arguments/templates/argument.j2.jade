- extends "layout.j2.jade"
- from "proposition_macros.j2.jade" import proposition_box
- from "argument_macros.j2.jade" import argument_box_full

- block title
  title= argument.title

- block content
  proposition = argument.proposition

  ol.breadcrumb
    li
      a(href=url_for("proposition", proposition_url=proposition.url))
        = _("discussion")
        |:
        = proposition.title

    li.active 
      a(href=url_for("argument", proposition_url=proposition.url, argument_url=argument.url))
      = _("argument")
      |:
      = argument.title

  = proposition_box(proposition, current_user, no_margin=True, voting=True)

  h3 Argument

  hr.argument_separator

  .arguments
      = argument_box_full(argument, current_user)


