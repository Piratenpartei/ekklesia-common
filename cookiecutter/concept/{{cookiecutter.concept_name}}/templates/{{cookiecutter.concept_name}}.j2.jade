- if layout
  - extends "ekklesia_portal/layout.j2.jade"

- block title
  title
    = brand_title
    |&nbsp;-&nbsp;
    = _('{{cookiecutter.concept_name}}')


- block content

  .{{cookiecutter.concept_name}}.container
    h4
      a(href=self_link)= title

      if show_edit_button
        a.edit_button(href=edit_url)
          i.far.fa-edit
          |&nbsp;
          = _('edit_button')

    if options.show_details
      dl
        if description
          dt= _('description')
          dd= description
