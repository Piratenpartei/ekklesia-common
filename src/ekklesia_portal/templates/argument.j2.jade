- if layout
  - extends "layout.j2.jade"

- block content
  .argument_content
    h5.argument_title
      if details
        a(href=header_link)= title
      else
        = title

    if options.extended
      small= abstract
      hr
      .argument_details_extended= (details or "")|markdown
    else
      p.argument_text= abstract

        if details
          a.read_more(href=self_link) &nbsp;&nbsp;&gt;&gt;&gt;


