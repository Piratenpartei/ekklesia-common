- extends "ekklesia_portal/layout.j2.jade"

- macro title(text)
  title= text
           
- block content
  dl
    dt User logged in?
    dd= current_user is not none

    if current_user is not none
      dt Username
      dd= current_user.name

    dt Session
    dd= _request.browser_session|tojson

    dt Translation of "hello"
    dd= _("hello")

    dt String from Cell
    dd= test_str

    dt Int from Cell
    dd= test_int
    
    dt URL from Cell
    dd
      a(href=test_url) Example.com
      
    dt Escaped HTML from Cell
    dd= test_escaped_html

    dt HTML from Cell
    dd= test_html

    dt Template Path
    dd= template_path

    dt Buttons
    dd 
      button.btn.btn-primary Primary Button
      button.btn.btn-primary-outline Primary Outline Button


