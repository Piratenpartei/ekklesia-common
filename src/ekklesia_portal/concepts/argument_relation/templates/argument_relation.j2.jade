- macro argument_voting()
  form(method='POST', action=vote_action_url)
    button.argument_vote_btn(type="submit", name="weight", value=1, class=upvote_button_disabled_class)
      i.fas.fa-arrow-up

    button.argument_vote_btn(type="submit", name="weight", value=0, class=revoke_vote_button_disabled_class)
      i.far.fa-circle

    button.argument_vote_btn(type="submit", name="weight", value=-1, class=downvote_button_disabled_class)
      i.fas.fa-arrow-down


- macro argument_relation(extended=false)
  .argument
    a(name="argument_relation_{{ id }}")
    .argument_relation_body
      .argument_relation_sidebar
        strong.large_number= "%+i" |format(score)
        if show_voting
          .argument_voting
            = argument_voting()

      .argument_col
        = render_cell(argument, details_link=self_link, extended=extended)

    .argument_relation_actions
      .counter_arguments
        if show_ca_button
          num_counter_arguments = counter_arguments|length
          a.counter_arguments_btn(href="#")
            strong.large_number= num_counter_arguments
            |&nbsp;
            span= ngettext("counter_argument", "counter_arguments", num_counter_arguments)

    = render_cell(argument, "footer")


- if layout
  - extends "ekklesia_portal/layout.j2.jade"

  - block title
    title= title

  - block content
    ol.breadcrumb
      li.breadcrumb-item
        a(href=proposition_url)
          = _("discussion")
          |:&nbsp;
          = proposition_title
      li.breadcrumb-item.active
        a(href=self_link)
          = argument_title

    = render_cell(proposition, margin=False)

    hr.argument_separator

    .arguments
        = argument_relation(extended=true)
- else
  = argument_relation()


